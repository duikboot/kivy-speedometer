#:kivy 1.8.0

<StaticBoxLayout@BoxLayout>:
    orientation: 'vertical'

    Label:
        text: app.gps_speed

    Label:
        text: app.highest_speed

    Label:
        text: app.gps_status

<Root>:

    StaticBoxLayout:

        BoxLayout:
            size_hint_y: None
            height: '48dp'
            padding: '2dp'

            ToggleButton:
                text: 'Start' if self.state == 'normal' else 'Stop'
                on_state: app.gps_start() if self.state == 'down' else app.gps_stop()

        BoxLayout:
            size_hint_y: None
            height: '48dp'

            Button:
                text: 'Reset'
                on_release: app.reset_highest_speed()

            Button:
                text: 'Settings'
                on_release: app.open_settings()
