#:kivy 1.8.0

<StaticBoxLayout@BoxLayout>:
    orientation: 'vertical'

    Label:
        size_hint_y: 10
        text: "Speed:"
    Label:
        size_hint_y: 40
        text: "{:.2f}".format(app.gps_speed)
        font_size: self.height / 3
        color: 1,0,0,1

    Label:
        size_hint_y: 10
        text: "Highest speed:"

    Label:
        size_hint_y: 40
        text: "{:.2f}".format(app.highest_speed)
        font_size: self.height / 3
        color: 1,0,0,1

    Label:
        size_hint_y: 10
        text: 'Gps status:'

    Label:
        size_hint_y: 10
        text: app.gps_status if app.gps_status else 'Click Start to get GPS speed updates'


<RootLayout>:
    StaticBoxLayout:

        BoxLayout:
            size_hint_y: None
            height: '48dp'
            padding: '2dp'

            ToggleButton:
                text: 'Start' if self.state == 'normal' else 'Stop'
                on_state: app.gps_start() if self.state == 'down' else app.gps_stop()

        BoxLayout:
            size_hint_y: None
            height: '48dp'

            Button:
                text: 'Reset'
                on_release: app.reset_highest_speed()

            Button:
                text: 'Settings'
                on_release: app.open_settings()
